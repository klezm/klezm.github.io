{
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  // "hostRequirements": {
  //   "memory": "8gb"
  // },

  // "waitFor": "onCreateCommand",
  // "updateContentCommand": "yarn",
  // "postCreateCommand": "",
  // "postAttachCommand": "yarn dev",

  "customizations": {
    "codespaces": {
      "openFiles": ["data/blog/code-sample.mdx"]
    },
    "vscode": {
      "settings": {
        "editor.formatOnSave": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "unifiedjs.vscode-mdx",
        "bradlc.vscode-tailwindcss",
        "GitHub.copilot-chat",
        "GitHub.copilot"
      ]
    }
  },

  "portsAttributes": {
    "3000": {
      "label": "Nextjs server",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [3000],

  "features": {
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0.0.3": {}
    // "ghcr.io/devcontainers-extra/features/deno:1": {},
    // "ghcr.io/devcontainers/features/github-cli:1": {},
    // "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    // "ghcr.io/devcontainers-extra/features/act-asdf:2": {}
    // // "ghcr.io/devcontainers-extra/features/act:1": {}
  }
}
